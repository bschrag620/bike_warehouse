<table>
	<tr>
		<th>Purhcase ID</th>
		<th>Amount</th>
		<% if is_admin? %>
			<th>User</th>
		<% end %>
		<th></th>
	</tr>
	<% purchases.each do |purch| %>
		<tr>
			<td><%= purch.purchase_id %></td>
			<td><%= purch.total %></td>
			<% if is_admin? %>
				<td><%= purch.user.username %></td>
				<td><%= link_to "View", admin_purchase_path(purch) %></td>
			<% else %>
				<td><%= link_to "View", user_receipt_path(purch.user.id, purch.id) %></td>
			<% end %>
			
		</tr>
	<% end %>
</table>