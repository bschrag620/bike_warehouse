<div class="login">
<%= form_tag('/login') do %>
	<%= hidden_field_tag "redirect_path", request.env['PATH_INFO'] %>
	<table>
		<tr>
			<th align="left">Username</th>
			<th align="left">Password</th>
		</tr>
		<tr>
			<td><%= text_field_tag :username %></td>
			<td><%= password_field_tag :password %></td>
		</tr>
	</table><%= submit_tag "Log in" %>
<% end %>
</div>