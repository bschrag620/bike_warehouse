<table border="1">
	<tr>
		<th>Item</th>
		<th>Price</th>
		<th></th>
	</tr>
	<% cart.each do |item| %>
		<tr>
			<td><%= item.full_name %><br><%= item.part_number %></td>
			<td>$<%= item.price %></td>
			<td><%= link_to "Remove", remove_from_cart_path(:id => item.id) %></td>
		</tr>
	<% end %>
	<tr>
		<td>Discount:</td>
		<td>0</td>
	</tr>
	<tr>
		<td>Subtotal:</td>
		<td>$<%= total %></td>
	</tr>
	<tr>
		<td>Tax:</td>
		<td>$<%= tax(total) %></td>
	</tr>
	<tr>
		<td><b>Total:</b></td>
		<td><b>$<%= total + tax(total) - 0 %></b></td>
	</tr>
</table>